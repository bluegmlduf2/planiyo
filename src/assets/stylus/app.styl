// 레이아웃화면 변수 
--medium = 'screen and (min-width: 768px)'/* 스마트폰 세로가로 테블릿 screen은 데스크탑,스마트폰적용*/
--large = 'screen and (min-width: 992px)'
--xlarge = 'screen and (min-width: 1200px)'
--color-dark = rgb(38, 42, 65)
--color-white = white
--color-dark-input = rgba(255, 255, 255, 0.1);

/*
* 공통적용항목
*/ 
// a링크효과제거
a:link , a:visited , a:hover{ 
 text-decoration: none;
 color: white
}

// 항목명
span.sm-title 
	font-weight: bold
	font-size: 0.9rem
	display: inline-block
	margin-bottom 0.5rem

/*
* 레이아웃화면
*/
.default-body
    .default-background
        margin: 8px
        color: white
        background: --color-dark
        border-radius: 15px
        .default-left
            position: relative
            display: flex
            flex-direction: column /*수직 정렬*/
            align-items: center
            justify-content: center
        .default-right
            display: flex
            flex-direction: column /*수직 정렬*/
            align-items: center
            justify-content: center
            color: black
            background: white
            border-radius: 15px
            margin: 8px 0 8px 2.5%
            width: 95%
            @media --medium
                margin: 8px 0
                width: 100%
                right: 8px
		.default-welcome
			width: 95%
			h1
				padding-left 0.7rem
			p
				margin-top: 1.5rem
				color: rgb(118, 121, 136)
		
		// 검색어 입력창
		.search-bar
			width: 95%
			div.input-groupt
				display: flex 
				.btn
					border-style: inset
					display: flex
					justify-content: center
					align-items center
					padding 0.9rem
					color: --color-white
					background: --color-dark-input
					border-radius: 10px 0 0 10px;
				.btn:focus
					box-shadow: none;//부트스트랩 버튼 클릭시 테두리 발생 제거
				.form-control
					width: 100%;
					height: 3rem;
					color: white;
					background: --color-dark-input
					border-color: transparent;
					border-radius: 0 10px 10px 0;
					--placeholder-color: --color-white
				.form-control:focus
					box-shadow: none;
		// 검색 조건
		.search-condition
			width: 90%
			margin-top 2rem
			.form-control
				border-radius: 10px!important
		// 할일목록
		.search-todoList
			width: 90%
			margin-top 2rem
			.progress
				height 0.8rem
				.progress-bar
					background-color #4d76fd;
			.search-todoList-status
				display: flex
				margin-top 1.2rem
				text-align: center
				div
					flex: 3
				p
					margin-bottom 0
				.status-total
					font-weight: bold
				.status-title
					font-weight bold
				.status-title-mini
					font-size 0.8rem
				a:hover
					transition color 0.25s ease-out 100ms
					color #5579ee!important
					
// 햄버거 메뉴
.button_container 
	position absolute // default-left기준이됨
	left: 4%
	top: 5%
	height 1.5rem
	width 1.8rem
	cursor pointer
	z-index 100 // 높이 100%인 오버레이가 표시 되더라도 z-index를 높여서 해당 버튼은 항상 보이도록 설정
	transition opacity 0.25s ease
	&:hover 
		opacity 0.7
	&.active 
		.top-bar 
			transform translateY(11px) translateX(0) rotate(45deg)
			background --color-white 
		.middle-bar 
			opacity 0
			background --color-white 
		.bottom-bar 
			transform translateY(-11px) translateX(0) rotate(-45deg)
			background --color-white 
	span 
		background --color-white 
		border none
		height 5px
		width 100%
		position absolute
		top 0
		left 0
		transition all 0.35s ease
		cursor pointer
		&:nth-of-type(2) 
			top 11px
		&:nth-of-type(3) 
			top 22px
.overlay 
	position absolute // default-left가 기준이됨
	background-color --color-dark 
	display flex
	flex-direction column
	justify-content center
	align-items center
	width 90%
	height 0%
	border-radius: 15px;
	z-index 1
	overflow hidden
	&.open 
		height 100% // 평소엔 안보이다가 open 클래스가 붙으면 높이 100%인 햄버거버튼메뉴가 보임
		li 
			animation fadeInRight 0.4s ease forwards
			animation-delay 0.25s
			&:nth-of-type(2) 
				animation-delay 0.3s
			&:nth-of-type(3) 
				animation-delay 0.35s
			&:nth-of-type(4) 
				animation-delay 0.4s
            @keyframes fadeInRight {
				0% {
					opacity: 0;
					left: 20%;
				}
				100% {
					opacity: 1;
					left: 0;
				}
            }
	ul 
		list-style none
		padding 0
		margin 25% auto
		display inline-block
		position relative
		height 100%
		li 
			font-size 1.5rem
			display block
			text-align left
			height 25%
			height calc(100% / 4)
			min-height 50px
			position relative
			opacity 0
			a 
				display block
				position relative
				color --color-white 
				text-decoration none
				overflow hidden
				&:after 
					content ""
					position absolute
					bottom 0
					left 50%
					width 0%
					transform translateX(-50%)
					height 3px
					background --color-white 
					transition 0.35s


