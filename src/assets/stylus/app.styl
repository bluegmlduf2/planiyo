// 햄버거 메뉴
.button_container 
	position absolute // default-left기준이됨
	left: 3.5%
	top: 1.5%
	height 1.5rem
	width 1.8rem
	cursor pointer
	z-index 100 // 높이 100%인 오버레이가 표시 되더라도 z-index를 높여서 해당 버튼은 항상 보이도록 설정
	transition opacity 0.25s ease
	&:hover 
		opacity 0.7
	&.active 
		.top-bar 
			transform translateY(11px) translateX(0) rotate(45deg)
			background --color-white 
		.middle-bar 
			opacity 0
			background --color-white 
		.bottom-bar 
			transform translateY(-11px) translateX(0) rotate(-45deg)
			background --color-white 
	span 
		background --color-white 
		border none
		height 5px
		width 100%
		position absolute
		top 0
		left 0
		transition all 0.35s ease
		cursor pointer
		&:nth-of-type(2) 
			top 11px
		&:nth-of-type(3) 
			top 22px
.overlay 
	position absolute // default-left가 기준이됨
	background-color --color-dark 
	display flex
	flex-direction column
	justify-content flex-start
	align-items center
	width 90%
	height 0%
	border-radius: 15px;
	z-index 1
	overflow hidden
	&.open 
		height 75% // 평소엔 안보이다가 open 클래스가 붙으면 높이 75%인 햄버거버튼메뉴가 보임
		li 
			animation fadeInRight 0.4s ease forwards
			animation-delay 0.25s
			&:nth-of-type(2) 
				animation-delay 0.3s
			&:nth-of-type(3) 
				animation-delay 0.35s
			&:nth-of-type(4) 
				animation-delay 0.4s
            @keyframes fadeInRight {
				0% {
					opacity: 0;
					left: 20%;
				}
				100% {
					opacity: 1;
					left: 0;
				}
            }
	ul 
		list-style none
		padding 0
		margin 25% auto
		display inline-block
		position relative
		height 100%
		li 
			font-size 1.5rem
			display block
			text-align left
			height 25%
			height calc(100% / 4)
			min-height 50px
			position relative
			opacity 0
			a 
				display block
				position relative
				color --color-white 
				text-decoration none
				overflow hidden
				&:after 
					content ""
					position absolute
					bottom 0
					left 50%
					width 0%
					transform translateX(-50%)
					height 3px
					background --color-white 
