// 체크박스
.list-checkbox {
	position: relative;
	height: 26px;
	width: 26px;
}
.list-checkbox label {
	background-color: #fff;
	border: 1px solid #ccc;
	border-radius: 50%;
	cursor: pointer;
	height: 26px;
	left: 0;
	position: absolute;
	top: 0;
	width: 26px;
}
// 추가모드버튼
.list-checkbox.list-add label:after {
	border: 2px solid #fff;
	border-top: none;
	border-right: none;
	content: "";
	height: 6px;
	left: 7px;
	opacity: 0;
	position: absolute;
	top: 8px;
	transform: rotate(-45deg);
	width: 12px;
}
// 삭제모드 버튼
.list-checkbox.list-del label:after {
	border: 2.5px solid #fff;
	border-top: none;
	border-right: none;
	border-left: none;
	content: "";
	height: 6px;
	left: 6px;
	opacity: 0;
	position: absolute;
	top: 7px;
	width: 12px;
}
.list-checkbox input[type="checkbox"] {
	visibility: hidden;
}
// 추가모드버튼
.list-checkbox.list-add input[type="checkbox"]:checked + label {
	background-color: rgb(54, 217, 216);
	border-color: rgb(54, 217, 216);
	transition 0.25s
}
// 삭제모드버튼
.list-checkbox.list-del input[type="checkbox"]:checked + label {
	background-color: rgb(213, 63, 50);
	border-color: rgb(213, 63, 50);
	transition 0.25s
}
.list-checkbox input[type="checkbox"]:checked + label:after {
	opacity: 1;
	transition 0.35s
}

